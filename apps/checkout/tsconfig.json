{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "es2022"],
    "jsx": "preserve",
    "module": "commonjs",

    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
